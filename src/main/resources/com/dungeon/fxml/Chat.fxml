<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<BorderPane prefHeight="500" prefWidth="600" style="-fx-background-color: #FFFFFF; -fx-font-family: 'Courier New';" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.dungeon.messaging.ChatController">

    <!-- Header -->
    <top>
        <VBox alignment="CENTER" style="-fx-background-color: #DCF8C6; -fx-padding: 10; -fx-border-color: #DCF8C6; -fx-border-width: 0 0 1 0;">
            <Text text="Dungeon Eclipse Chat">
                <style>
                    -fx-font-size: 20px;
                    -fx-font-weight: bold;
                    -fx-fill: #333333;
                </style>
            </Text>
        </VBox>
    </top>

    <!-- Chat History -->
    <center>
        <ListView fx:id="chatHistory" VBox.vgrow="ALWAYS">
            <style>
                -fx-background-color: #FFFFFF;
                -fx-control-inner-background: #FFFFFF;-fx-border-color: transparent; -fx-background-color: #E5DDD5;</style>
        </ListView>
    </center>

    <!-- Input Area -->
    <bottom>
        <VBox spacing="5" style="-fx-background-color: #DCF8C6; -fx-padding: 10; -fx-border-color: #DCF8C6; -fx-border-width: 1 0 0 0;">
            <HBox alignment="CENTER" spacing="10">
                <TextField fx:id="messageInput" promptText="Type here..." HBox.hgrow="ALWAYS">
                    <style>
                        -fx-background-color: #FFFFFF;
                        -fx-text-fill: #333333;
                        -fx-prompt-text-fill: #999999;
                        -fx-font-family: 'Courier New';
                        -fx-border-color: #CCCCCC;
                        -fx-border-width: 1;
                        -fx-background-radius: 0;
                        -fx-border-radius: 0;
                    </style>
                </TextField>
                <Button fx:id="sendButton" onAction="#sendMessage" text="SEND">
                    <style>
                        -fx-background-color: #333333;
                        -fx-text-fill: #FFFFFF;
                        -fx-font-weight: bold;
                        -fx-font-family: 'Courier New';
                        -fx-background-radius: 0;
                    </style>
                </Button>
            </HBox>
        </VBox>
    </bottom>

</BorderPane>
