<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<BorderPane styleClass="main-menu-background" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.dungeon.controllers.TutorialController">
    
    <top>
        <VBox alignment="CENTER" spacing="10" style="-fx-background-color: pink;">
            <padding>
                <Insets bottom="10" top="20" />
            </padding>
            <Text fill="#011b048a" styleClass="title-text" text="How to Play">
                <effect>
                    <DropShadow radius="5" spread="0.2" />
                </effect>
            </Text>
        </VBox>
    </top>
    
    <center>
        <ScrollPane fitToWidth="true" styleClass="tutorial-scroll">
            <VBox spacing="20" style="-fx-background-color: lavender;" styleClass="tutorial-content">
                <padding>
                    <Insets bottom="20" left="30" right="30" top="20" />
                </padding>
                
                <VBox styleClass="tutorial-section">
                    <Text styleClass="section-title" text="Controls" />
                    <GridPane hgap="15" vgap="10">
                        <columnConstraints>
                            <ColumnConstraints hgrow="NEVER" minWidth="100" />
                            <ColumnConstraints hgrow="ALWAYS" />
                        </columnConstraints>
                        
                        <Text styleClass="key-text" text="W, A, S, D" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                        <Text text="Move character" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                        
                        <Text styleClass="key-text" text="Mouse" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                        <Text text="Aim weapons and abilities" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                        
                        <Text styleClass="key-text" text="Left Click" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                        <Text text="Attack" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                        
                        <Text styleClass="key-text" text="E" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                        <Text text="Interact with objects, doors, and puzzles" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                        
                        <Text styleClass="key-text" text="I" GridPane.columnIndex="0" GridPane.rowIndex="4" />
                        <Text text="Open inventory" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                        
                        <Text styleClass="key-text" text="ESC" GridPane.columnIndex="0" GridPane.rowIndex="5" />
                        <Text text="Pause game" GridPane.columnIndex="1" GridPane.rowIndex="5" />
                        
                        <Text styleClass="key-text" text="1-5" GridPane.columnIndex="0" GridPane.rowIndex="6" />
                        <Text text="Switch weapons" GridPane.columnIndex="1" GridPane.rowIndex="6" />
                  <rowConstraints>
                     <RowConstraints />
                     <RowConstraints />
                     <RowConstraints />
                     <RowConstraints />
                     <RowConstraints />
                     <RowConstraints />
                     <RowConstraints />
                  </rowConstraints>
                    </GridPane>
                </VBox>
                
                <VBox styleClass="tutorial-section">
                    <Text styleClass="section-title" text="Game Mechanics" />
                    <Text text="◆ Each playthrough features a unique procedurally generated dungeon." wrappingWidth="700" />
                    <Text text="◆ Explore rooms, battle enemies, and collect treasures." wrappingWidth="700" />
                    <Text text="◆ Solve puzzles to unlock paths and discover secrets." wrappingWidth="700" />
                    <Text text="◆ Defeat the boss at the end of each level to progress." wrappingWidth="700" />
                    <Text text="◆ Manage your inventory and use items wisely." wrappingWidth="700" />
                </VBox>
                
                <VBox styleClass="tutorial-section">
                    <Text styleClass="section-title" text="Room Types" />
                    <HBox spacing="20">
                        <VBox alignment="TOP_CENTER" styleClass="room-type">
                            <Text styleClass="room-type-title" text="Combat Rooms" />
                            <Text text="Defeat all enemies to progress" textAlignment="CENTER" wrappingWidth="150" />
                        </VBox>
                        <VBox alignment="TOP_CENTER" styleClass="room-type">
                            <Text styleClass="room-type-title" text="Puzzle Rooms" />
                            <Text text="Solve the puzzle to unlock doors" textAlignment="CENTER" wrappingWidth="150" />
                        </VBox>
                        <VBox alignment="TOP_CENTER" styleClass="room-type">
                            <Text styleClass="room-type-title" text="Treasure Rooms" />
                            <Text text="Collect valuable items and power-ups" textAlignment="CENTER" wrappingWidth="150" />
                        </VBox>
                        <VBox alignment="TOP_CENTER" styleClass="room-type">
                            <Text styleClass="room-type-title" text="Boss Rooms" />
                            <Text text="Defeat the powerful boss to complete the level" textAlignment="CENTER" wrappingWidth="150" />
                        </VBox>
                    </HBox>
                </VBox>
                
                <VBox styleClass="tutorial-section">
                    <Text styleClass="section-title" text="Tips" />
                    <Text text="◆ Look for health potions to restore your health." wrappingWidth="700" />
                    <Text text="◆ Keys are required to unlock certain doors." wrappingWidth="700" />
                    <Text text="◆ Some enemies have special abilities - observe their attack patterns." wrappingWidth="700" />
                    <Text text="◆ Bosses have multiple phases and weak spots to exploit." wrappingWidth="700" />
                    <Text text="◆ Collect gold to increase your score." wrappingWidth="700" />
                </VBox>
            </VBox>
        </ScrollPane>
    </center>
    
    <bottom>
        <HBox alignment="CENTER" spacing="20" style="-fx-background-color: black;">
            <padding>
                <Insets bottom="20" left="20" right="20" top="10" />
            </padding>
            <Button fx:id="closeButton" onAction="#closeWindow" style="-fx-background-color: crimson;" styleClass="menu-button" text="Close" />
        </HBox>
    </bottom>
</BorderPane>
